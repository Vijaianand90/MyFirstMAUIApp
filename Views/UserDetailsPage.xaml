<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIApp.Views.UserDetailsPage"
               xmlns:viewmodel ="clr-namespace:MyFirstMAUIApp.ViewModels"
             x:DataType="viewmodel:UserDetailsViewModel"
             Title="UserDetailsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Command="{Binding HomeCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <Label 
            Text="{Binding NewUserModel.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding NewUserModel.Email}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding NewUserModel.Address}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>